@model EF.Core.Models.Part;

<style>
    .editModal {
        background-color: lightblue;
    }
    .qtyStyle {
        width: 200px;
    }
    .nameStyle {
        width: 400px;
    }
    .partNotFound{
        color: red;
        font-size: x-large;
    }
</style>

<div class="modal fade" id="editPart">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header editModal">
                <h4 class="modal-title" id="editPartLabel">
                    Edit Part
                </h4>            

                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>


            <div class="modal-body">

                @if (Model != null)
                {
                    <div id="floater"></div>
                    <div id="opStatus"></div>
                    <p></p>

                    <div>
                        <h5>Part # @Model.PartId</h5>
                    </div>
                    <p></p>

                    <form action="Part/Edit">
                        @Html.AntiForgeryToken()
                        <div class="form-group">

                            @Html.HiddenFor(model => model.PartId)

                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name"
                                   id="Name"
                                   name="Name"
                                   class="form-control nameStyle" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Desc" class="control-label"></label>
                            <textarea asp-for="Desc"
                                      id="Desc"
                                      name="Desc"
                                      class="form-control">
                        </textarea>
                            <span asp-validation-for="Desc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Qty" class="control-label"></label>
                            <input asp-for="Qty"
                                   id="Qty"
                                   name="Qty"
                                   class="form-control qtyStyle" />
                            <span asp-validation-for="Qty" class="text-danger"></span>
                        </div>
                    </form>
                }
                else
                {
                    <div class="container partNotFound">
                        Part Not Found !
                    </div>
                }
            </div>


            <div class="modal-footer">
                <button data-dismiss="modal" id="cancel"
                        class="btn btn-default"
                        type="button">
                    Cancel
                </button>

                @if (Model != null)
                {
                    <button class="btn btn-primary"
                            data-save="modal"
                            type="button">
                        Edit Part
                    </button>
                }
            </div>
        </div>
    </div>
</div>













