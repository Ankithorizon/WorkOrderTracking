@using Microsoft.AspNetCore.Identity
@using MVCCore.Auth.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<style>
    .navbar-nav {
        margin-left: auto;
    }

    .userData {
        color: orangered;
        font-size: large;
    }
</style>

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Part" asp-action="Index">Part</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="CustomerOrder" asp-action="Index">Customer-Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="WorkOrder" asp-action="Index">Work-Orders [Operations]</a>
        </li>
    </ul>

    <ul class="navbar-nav ">
        <li class="nav-item ">
            <a id="manage" class="nav-link text-dark " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello <span class="userData"> @UserManager.GetUserName(User)! </span></a>
        </li>
        <li class="nav-item userData">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark ">Logout</button>
            </form>
        </li>
    </ul>
}
else if (SignInManager.IsSignedIn(User) && User.IsInRole("Operator"))
{
    <ul class="nav navbar-nav">     
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="OperatorLog" asp-action="Index">Operator-Log</a>
        </li>
    </ul>

    <ul class="navbar-nav ">
        <li class="nav-item ">
            <a id="manage" class="nav-link text-dark " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello <span class="userData"> @UserManager.GetUserName(User)! </span></a>
        </li>
        <li class="nav-item userData">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark ">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav ">
        <li class="nav-item">
            <a class="nav-link text-dark " id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark " id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}
