@{
    ViewData["Title"] = "Part - Home Page";
}
<div class="text-center">
    <h1 class="display-4">Parts</h1>
</div>
<div>
    <a asp-action="Create">Create - Part</a>
</div>


<!-- this will hold partial view (modal) -->
<div id="PlaceHolderHere"></div>
<!-- this will open modal -->
